# ESTE PROGRAMA CONVIERTE NUMEROS ENTEROS A PUNTO FLOTANTE
# RECORDAR QUE EN PUNTO FLOTANTE NO PODEMOS USAR UN VALOR INMEDIATO
# TENEMOS DOS OPCIONES: O GUARDAR EL NUMERO EN MEMORIA Y DESPUES HACER UN L.D
# O PASAR DE REGISTRO ENTERO A FLOTANTE, QUE ES LO QUE VAMOS A HACER
.code
daddi r1, r0, 4 # INICIALIZO R1 = 4

mtc1 r1, f0     # copia los 64 bits del registro entero al registro flotante

cvt.d.l f0, f0



halt
